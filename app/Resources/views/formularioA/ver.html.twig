{% block breadcrumb %}
    <div class="row">
        <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb">
                {% block breadcrumbItems %}
                    <li class="breadcrumb-item"><a href="#">ListadoDeFormularios</a></li>
                    <li class="breadcrumb-item active" aria-current="page">FormularioA</li>
                {% endblock %}
            </ol>
        </nav>
    </div>
{% endblock %}

{% block content %}

    
    <div class="card bg-light mb-12">

        <div class="card-body">
            <h1>Detalles de Formularios A - ID: {{ formulario.id }}</h1>
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Resumen ejecutivo</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <th>{{ formulario.resumenEjecutivo }}</th>
                    </tr>
                </tbody>
            </table>
                
            <h1>Datos Identificatorios</h1>
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Razon Social</th>
                        <th scope="col">CUIT</th>
                        <th scope="col">Fecha inicio actividades</th>
                        <th scope="col">Tipo Persona</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <th>{{ formulario.domicilio.empresa.razonSocial }}</th>
                        <th>{{ formulario.domicilio.empresa.cuit }}</th>
                        <th>{{ formulario.domicilio.empresa.fechaInicioActividades|date('Y-m-d') }}</th>
                        <th>{{ formulario.domicilio.empresa.tipoPersona }}</th>
                    </tr>
                </tbody>
            </table>
                    
            <h1>Domicilio {{ formulario.domicilio.Tipo }}</h1>

            <table class="table table-striped">

                <thead class="thead-light">
                    <tr>
                        <th scope="col">Calle</th>
                        <th scope="col">Numero</th>
                        <th scope="col">Piso</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>{{ formulario.domicilio.calle }}</td>
                        <td>{{ formulario.domicilio.numero }}</td>
                        <td>{{ formulario.domicilio.piso }}</td>
                    
                    </tr>
                </tbody>

            </table>

            <table class="table table-striped">

                <thead class="thead-light">
                    <tr>
                        <th scope="col">Departamento</th>
                        <th scope="col">Tel√©fono</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>{{ formulario.domicilio.depto }}</td>
                        <td>{{ formulario.domicilio.telefono }}</td>
                        <td>{{ formulario.domicilio.email }}</td>     
                    </tr>
                </tbody>

            </table>
            <div>
                <button type="button" class="btn btn-primary" onclick="window.location.href = '{{ path('listar_formularios') }}'">Volver</button>
            </div>
        </div>
        
    </div>
{% endblock %}