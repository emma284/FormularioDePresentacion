{% extends '@STGTheme/Default/base.html.twig' %}


{% block content %}
<div class="card bg-light mb-12">
        
    <div class="card-body">
    
        <h1>Nuevo Representante:</h1>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}     
            <div class="form-row">
                <div class="form-group col-md-3">
                    {{ form_label(form.tipo) }}
                    {{ form_widget(form.tipo, {'attr': {'class': form_errors(form.tipo) ? 'form-control is-invalid' : 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.tipo) }}
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    {{ form_label(form.dni) }}
                    {{ form_widget(form.dni, {'attr': {'class': form_errors(form.dni) ? 'form-control is-invalid' : 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.dni) }}
                    </div>
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre, {'attr': {'class': form_errors(form.nombre) ? 'form-control is-invalid' : 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.nombre) }}
                    </div>
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.apellido) }}
                    {{ form_widget(form.apellido, {'attr': {'class': form_errors(form.apellido) ? 'form-control is-invalid' : 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.apellido) }}
                    </div>
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.cargo) }}
                    {{ form_widget(form.cargo, {'attr': {'class': form_errors(form.cargo) ? 'form-control is-invalid' : 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.cargo) }}
                    </div>
                </div>
            </div>

            
            <div class="form-row">
                <div>
                    {#{{ form_widget(form.save) }}#}
                    <button type="submit" class="btn btn-primary" formnovalidate>Guardar</button>
                </div>
                <div>&nbsp;</div>{# Espacio en blanco p/separar botones #}
                <div>
                    <button type="button" class="btn btn-primary" onclick="window.location.href = '{{ path('formulario_ver', {'id' : formulario.id }) }}'">Volver</button>
                </div>
            </div>
           {{form_end(form)}}     
        </div>
    </div>
                
{% endblock %}

